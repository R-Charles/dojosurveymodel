@model Result;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1> Dojo Survey </h1>
    <form action="/result" method="post">

        <div>
        <label for="">Your Name:</label>
        <input type="text" asp-for="Name" name="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span><br>

        </div>
        <div>
            <label for="">Dojo Location:</label>
            <select class= "form-control" name= "Location" id=""asp-for="Location">
            <option value=""></option>
            <option value="Seattle">Seattle</option>
            <option value="San Fransisco">San Fransisco</option>
            <option value="Somewhere else">Somewhere else</option>
            </select>
            <span asp-validation-for="Location" class="text-danger"></span><br>

        </div>
        <div>
            <label for="">Favorite Language:</label>
            <select class= "form-control" name= "Language" id="" asp-for="Language">
            <option value=""></option>
            <option value="C#">C#</option>
            <option value="JavaScript">JavaScript</option>
            <option value="Python">Python</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span><br>

        </div>
        <div>
            <label for="">Comment(optional):</label>
            <textarea name="Comment" id="" cols="30" rows="10" asp-for="Comment">Enter Optional Comment</textarea>
            <span asp-validation-for="Comment" class="text-danger"></span><br>
        </div>
        <div>
        <button type="submit">Submit</button>
        </div>
    </form>
</div>
